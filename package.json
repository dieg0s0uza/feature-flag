{
  "name": "node-feature-flag",
  "version": "1.0.3",
  "description": "Feature Flag",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "test": "jest",
    "prepublish": "npm run test && npm run build",
    "example": "npx ts-node examples/json/index.ts",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dieg0s0uza/node-feature-flag.git"
  },
  "keywords": [
    "feature flag",
    "feature toggle",
    "remote config"
  ],
  "author": "Diego Souza",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dieg0s0uza/node-feature-flag/issues"
  },
  "homepage": "https://github.com/dieg0s0uza/node-feature-flag#readme",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "dist"
    ]
  },
  "files": [
    "dist/**/*"
  ],
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "husky": "^7.0.4",
    "jest": "^27.4.3",
    "ts-jest": "^27.0.7",
    "tslint": "^6.1.3",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "@types/mongodb": "^4.0.7",
    "@types/mongoose": "^5.11.97"
  }
}